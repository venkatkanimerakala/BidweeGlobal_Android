<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_texture">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="70dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Please Enter 4 Digit Code"
                    android:textColor="@color/white_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/auth_timerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="(00:30)"
                    android:textColor="@color/white_color"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/auth_digitCode1Edittext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/bg_2stepverify_digit_active"
                        android:gravity="center"
                        android:maxLength="1"
                        android:singleLine="true"
                        android:textColor="@color/white_color"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/auth_digitCode2Edittext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/bg_2stepverify_digit"
                        android:gravity="center"
                        android:maxLength="1"
                        android:singleLine="true"
                        android:textColor="@color/white_color"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/auth_digitCode3Edittext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/bg_2stepverify_digit"
                        android:gravity="center"
                        android:maxLength="1"
                        android:singleLine="true"
                        android:textColor="@color/white_color"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/auth_digitCode4Edittext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/bg_2stepverify_digit"
                        android:gravity="center"
                        android:maxLength="1"
                        android:singleLine="true"
                        android:textColor="@color/white_color"
                        android:textSize="22sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Didn't receive code?"
                    android:textColor="@color/grey_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/auth_resendTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="RESEND"
                    android:textColor="@color/login_selectedtext_color"
                    android:textSize="16sp" />


            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/auth_reEnterDetailsButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/left_btn_bg"
                android:singleLine="true"
                android:text="RE-ENTER DETAILS"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/auth_verifyButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/right_btn_bg"
                android:singleLine="true"
                android:text="VERIFY"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
