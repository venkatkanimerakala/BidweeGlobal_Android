<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bidwee.activities" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name=".UserAuthenticationActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name="customer.CustomerDashboradActivity"
            android:theme="@style/MaterialDesignTheme"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name=".MerchantDashboardActivity"
            android:theme="@style/MaterialDesignTheme"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name="customer.ProductDetailsActivity"
            android:theme="@style/MaterialDesignTheme"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name="customer.BidRequestActivity"
            android:theme="@style/MaterialDesignTheme" >
        </activity>
        <activity
            android:name="customer.MyProfileActivity"
            android:theme="@style/MaterialDesignTheme" >
        </activity>
        <activity
            android:name="customer.NotificationsActivity"
            android:theme="@style/MaterialDesignTheme" >
        </activity>
        <activity
            android:name="customer.RFBActivity"
            android:theme="@style/MaterialDesignTheme" >
        </activity>
    </application>

</manifest>
